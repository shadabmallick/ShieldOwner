<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        android:theme="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <ImageView

            android:layout_weight="1"
            android:id="@+id/img_back"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:tint="@android:color/white">



        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="E-Interfone Setting"></TextView>


        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:contentPadding="7dp"
        card_view:cardCornerRadius="7dp"
        android:layout_below="@+id/toolbar"
        card_view:cardElevation="7dp"
        android:layout_margin="10dp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            >

            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="vertical"
                    android:background="@drawable/curve_white">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/circle_blue">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@mipmap/bell"/>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:text="@string/no_body"></TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:text="@string/phone_Call"></TextView>















                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_border"
                        android:weightSum="3"
                        android:padding="20dp"
                        android:layout_marginTop="20dp">


<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:padding="10dp"
    android:tint="@android:color/white"
    android:src="@drawable/ic_phone_call"
    android:background="@drawable/circle_green">


</ImageView>

                        <TextView
                            android:id="@+id/ivr_number"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="match_parent"
                            ></TextView>

                        <LinearLayout
                            android:id="@+id/ll_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:gravity="right"

                           >


                            <ImageView
                                android:id="@+id/edit_ivr"

                                android:layout_width="50dp"
                               android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_edit">


                            </ImageView>

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:text="@string/no_body_pick_up"></TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:text="@string/phone_Call_guard"></TextView>


                </LinearLayout>


            </ScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>






</RelativeLayout>