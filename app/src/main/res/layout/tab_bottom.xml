<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/light_dark_gray"
            />

        <LinearLayout
            android:id="@+id/button_layout"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="fill_parent"
            android:paddingTop="2dp"
            android:background="@color/white"
            android:layout_height="70dip">

            <LinearLayout
                android:id="@+id/button_E"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_layers"
                    android:tint="@color/light_dark_gray"
                    />

                <TextView
                    android:id="@+id/tv"
                    android:layout_below="@+id/img_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity"
                    android:textSize="12sp"
                    android:textColor="@color/light_dark_gray"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_E1"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_shield"
                    android:tint="@color/light_dark_gray"
                    />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_below="@+id/img_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/security"
                    android:textColor="@color/light_dark_gray"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_E2"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                >
                <RelativeLayout
                    android:id="@+id/rel_middle_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_blue">

                    <ImageView
                        android:id="@+id/img_temp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@android:color/white"
                        android:src="@drawable/ic_command"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_E3"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_temp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_users"
                    android:tint="@color/light_dark_gray"
                    />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_below="@+id/img_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/community"
                    android:textSize="12sp"
                    android:textColor="@color/light_dark_gray"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_E4"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_temp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_help_circle"
                    android:tint="@color/light_dark_gray"
                    />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_below="@+id/img_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help"
                    android:textSize="12sp"
                    android:textColor="@color/light_dark_gray"

                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>