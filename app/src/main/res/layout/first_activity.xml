<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray">

    <RelativeLayout
        android:id="@+id/rel_upcoming"
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/ll_visitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/rel_all_visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_all_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/all"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_upcoming_visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:id="@+id/tv_upcoming_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:text="@string/upcoming"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:id="@+id/ll_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:id="@+id/view_all_visitor"
                android:background="@android:color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:id="@+id/view_upcoming_visitor"
                android:background="@android:color/white"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_search"
        android:layout_below="@+id/rel_upcoming"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curve_white"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:hint="@string/search"
            android:background="@android:color/transparent"
            android:paddingStart="20dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/rl_profile"
            />

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_blue">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:tint="@android:color/white"
                android:src="@drawable/ic_user"/>

        </RelativeLayout>



    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_activity"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_layout"
        android:layout_below="@+id/rel_search"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_upcoming"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_layout"
        android:layout_below="@+id/rel_search"
        >

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/car1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_curve"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:weightSum="5">


            <ImageView
                android:id="@+id/img_cab"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@mipmap/car_new"
                android:paddingRight="5dp"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"

                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_delivery"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="5dp"
                android:src="@mipmap/delivery"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_guest"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@mipmap/guest"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="5dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_help"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:src="@mipmap/visiting_help"
                android:padding="5dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/ll_bell"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/curve_alert"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bell"
                    />

            </LinearLayout>



        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_layout"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="70dip">

        <LinearLayout   android:id="@+id/button_E"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_layers"
                android:tint="@android:color/black"
                />

            <TextView
                android:layout_below="@+id/img_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/blue"
                android:text="@string/activity"




                />
        </LinearLayout>

        <LinearLayout   android:id="@+id/button_E1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_temp1"
                android:layout_width="wrap_content"
                android:tint="@color/dark_gray"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_shield"
                />

            <TextView
                android:layout_below="@+id/img_temp"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="@string/security"




                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_E2"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"


            >
            <RelativeLayout
                android:id="@+id/rel_middle_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/circle_blue">

                <ImageView
                    android:id="@+id/img_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_command"

                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout   android:id="@+id/button_E3"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_temp3"
                android:tint="@color/dark_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_users"
                />

            <TextView
                android:layout_below="@+id/img_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community"
                android:textSize="12dp"




                />
        </LinearLayout>

        <LinearLayout   android:id="@+id/button_E4"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_temp4"
                android:tint="@color/dark_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_help_circle"
                />

            <TextView
                android:layout_below="@+id/img_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:textSize="12dp"




                />
        </LinearLayout>

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AVLoadingIndicatorView"
        android:visibility="gone"
        app:indicatorName="BallPulseSyncIndicator"
        app:indicatorColor="@color/blue"
        />

</RelativeLayout>
