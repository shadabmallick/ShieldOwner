<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background">
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/back"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/next_curve"/>


    <RelativeLayout
        android:background="@drawable/background_trnaparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:alpha="0.5"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true">

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/edt_city_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"




            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_city_name"
            android:background="@android:color/white"
            ></View>
        <Spinner
            android:id="@+id/edt_complex_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/view1"


            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_complex_name"
            android:background="@android:color/white"
            ></View>

        <Spinner
            android:id="@+id/edt_block_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/view2"

            android:textColor="@android:color/white"
            android:hint="@string/block_name"/>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_block_name"
            android:background="@android:color/white"
            ></View>

        <Spinner
            android:id="@+id/edt_flat_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/view3"

            android:textColor="@android:color/white"
            />
        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_flat_no"
            android:background="@android:color/white"
            ></View>


<!--
        <Spinner
            android:id="@+id/edt_floor_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/view5"

            android:textColor="@android:color/white"
            />
-->
<!--
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_floor_no"
            android:background="@android:color/white"
            ></View>
-->

        <RelativeLayout
            android:id="@+id/rel_next"
            android:layout_below="@+id/view5"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/add"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/next_curve"/>


        </RelativeLayout>




    </RelativeLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AVLoadingIndicatorView"
        android:visibility="visible"
        app:indicatorName="BallPulseSyncIndicator"
        app:indicatorColor="@color/blue"
        />

</RelativeLayout>
